{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "target": "ES6",
    "lib": ["es2015", "es2016", "es2017", "es2018", "scripthost"],
    "experimentalDecorators": true,
    "outDir": "lib",
    "allowJs": true
  },
  "include": ["./src/**/*"]
}
